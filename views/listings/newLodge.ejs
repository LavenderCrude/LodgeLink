<% layout('/layouts/boilerplate.ejs') %>
<style>
  /* Your existing CSS */
  .form-container {
    max-width: 700px;
    margin: 0 auto;
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
  }

  .form-container h1 {
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 24px;
  }

  label {
    font-weight: 500;
    margin-bottom: 6px;
    display: block;
  }

  input[type='text'],
  input[type='number'],
  textarea {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #ddd;
    border-radius: 6px;
    margin-bottom: 20px;
    font-size: 16px;
  }

  .form-row {
    display: flex;
    gap: 20px;
  }

  .form-row .form-group {
    flex: 1;
  }

  button {
    background-color: #d90429;
    color: white;
    border: none;
    padding: 10px 25px;
    font-size: 16px;
    border-radius: 6px;
    cursor: pointer;
  }

  button:hover {
    background-color: #b70321;
  }
</style>

<br />
<div class="form-container">
  <h1>Create a New Listing</h1>
  <form
    id="listingForm"
    action="/listing/newLodge/upload"
    method="POST"
    class="needs-validation"
    enctype="multipart/form-data"
    novalidate
  >
    <div class="form-group mb-3">
      <label for="title">Title</label>
      <input
        type="text"
        name="title"
        id="title"
        placeholder="enter title"
        class="form-control"
        required
        minlength="5"
      />
      <div class="invalid-feedback">
        Title must be at least 5 characters long.
      </div>
    </div>

    <div class="form-group mb-3">
      <label for="description">Description</label>
      <textarea
        name="description"
        id="description"
        placeholder="enter description"
        rows="3"
        class="form-control"
        required
        minlength="10"
      ></textarea>
      <div class="invalid-feedback">
        Description must be at least 10 characters long.
      </div>
    </div>

    <div class="form-group mb-3">
      <label for="image">Upload Image</label>
      <input
        type="file"
        name="image"
        id="image"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Please enter a valid URL.</div>
    </div>

    <div class="form-row d-flex mb-3">
      <div class="form-group flex-fill me-3">
        <label for="price">Price</label>
        <input
          type="number"
          name="price"
          id="price"
          placeholder="enter price"
          class="form-control"
          min="0"
          step="0.01"
        />
        <div class="invalid-feedback">
          Please enter a valid price (zero or more).
        </div>
      </div>
      <div class="form-group flex-fill">
        <label for="country">Country</label>
        <input
          type="text"
          name="country"
          id="country"
          placeholder="enter country"
          class="form-control"
          required
          minlength="3"
        />
        <div class="invalid-feedback">
          Country must be at least 3 characters long.
        </div>
      </div>
    </div>

    <div class="form-group mb-3">
      <label for="location">Location</label>
      <input
        type="text"
        name="location"
        id="location"
        placeholder="enter location"
        class="form-control"
        required
        minlength="3"
      />
      <div class="invalid-feedback">
        Location must be at least 3 characters long.
      </div>
    </div>

    <button type="submit" class="add-button">Add</button>
  </form>
</div>
<script src="/js/newLodge.js"></script>
